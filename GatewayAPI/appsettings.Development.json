{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Secret": "a-very-longgggg-hahaha-lmao-secret",
    "Issuer": "Theater",
    "Audience": "TheaterUser",
    "AccessExpiration": 3600,
    "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role"
  },
  "ReverseProxy": {
    "Routes": {
      "login-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/login"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "create-user-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/User"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "movies-route": {
        "ClusterId": "movies-cluster",
        "AuthorizationPolicy": "ManagerAdminPolicy",
        "Match": {
          "Path": "/movies/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/movies"
          }
        ]
      },
      "reservation-route": {
        "ClusterId": "reservation-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/reservation/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/reservation"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user"
          }
        ]
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/payment"
          }
        ]
      }
    },
    "Clusters": {
      "movies-cluster": {
        "Destinations": {
          "movies-destination": {
            "Address": "http://movieservice:8080"
          }
        }
      },
      "reservation-cluster": {
        "Destinations": {
          "reservation-destination": {
            "Address": "http://reservationservice:8080"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-destination": {
            "Address": "http://userservice:8080"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment-destination": {
            "Address": "http://paymentservice:8080"
          }
        }
      }
    }
  }
}
