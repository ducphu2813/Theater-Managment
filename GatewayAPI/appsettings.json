{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.AspNetCore.Authorization": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Secret": "a-very-longgggg-hahaha-lmao-secret",
    "Issuer": "Theater",
    "Audience": "TheaterUser",
    "AccessExpiration": 3600,
    "RoleClaimType": "http://schemas.microsoft.com/ws/2008/06/identity/claims/role"
  },
  "ReverseProxy": {
    "Routes": {
      "login-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/login"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "register-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/Register"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "create-user-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/User"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "mail-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/Mail/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "forgot-pass-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/User/forgotPassword/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "reset-pass-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "auth/api/User/resetPassword/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ],
        "AuthorizationPolicy": "Anonymous"
      },
      "movies-route": {
        "ClusterId": "movies-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/movies/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/movies"
          }
        ]
      },
      "manage-movies-route": {
        "ClusterId": "movies-cluster",
        "AuthorizationPolicy": "ManagerAdminPolicy",
        "Match": {
          "Path": "/movies/{**catch-all}",
          "Methods": [ "POST", "PUT", "DELETE" ]
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/movies"
          }
        ]
      },
      "reservation-route": {
        "ClusterId": "reservation-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/reservation/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/reservation"
          }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/auth"
          }
        ]
      },
      "user-route": {
        "ClusterId": "user-cluster",
        "AuthorizationPolicy": "Anonymous",
        "Match": {
          "Path": "/user/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/user"
          }
        ]
      },
      "payment-route": {
        "ClusterId": "payment-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/payment/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/payment"
          }
        ]
      },
      "admin-route": {
        "ClusterId": "admin-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "/admin/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/admin"
          }
        ]
      }
    },
    "Clusters": {
      "movies-cluster": {
        "Destinations": {
          "movies-destination": {
            "Address": "http://movieservice:8080"
          }
        }
      },
      "reservation-cluster": {
        "Destinations": {
          "reservation-destination": {
            "Address": "http://reservationservice:8080"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth-destination": {
            "Address": "http://authservice:8080"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "user-destination": {
            "Address": "http://userservice:8080"
          }
        }
      },
      "payment-cluster": {
        "Destinations": {
          "payment-destination": {
            "Address": "http://paymentservice:8080"
          }
        }
      },
      "admin-cluster": {
        "Destinations": {
          "admin-destination": {
            "Address": "http://adminservice:8080"
          }
        }
      }
    }
  }
}
